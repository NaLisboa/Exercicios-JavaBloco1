package br.com.generation.exercicios;

	import java.util.Scanner;
	
	/*Autor: Nathalia Lisboa
	 * Data: 01/10/2021
	 */
	
public class Exercicio3_0110 {

	public static void main(String[] args) {
		
		Scanner leia = new Scanner(System.in);
		
		int segundos; int horas; int minutos;
		
		System.out.println("Quantidade de Segundos: ");
		segundos = leia.nextInt();
		System.out.println("Em segundos: ");
		
		System.out.println("Em minutos: ");
		minutos = (segundos) / 60;
		
		System.out.println("Em horas: ");
		horas = (segundos) / 3600;
		
	}

}
