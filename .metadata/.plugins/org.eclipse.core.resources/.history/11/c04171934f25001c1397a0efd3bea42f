package br.com.generation.exercicios_aula02;

import java.util.Scanner;

public class Exercicio03_0410 {

	public static void main(String[] args) {
		
		int idade1, idade2, idade3;
		String categoria1, categoria2, categoria3;

		
		Scanner leia = new Scanner(System.in);
		System.out.println("Escreva sua idade: ");
		
		idade1 = leia.nextInt();
		idade2 = leia.nextInt();
		idade3 = leia.nextInt();
		
		
		if(idade1 >= 10 && idade1 <= 14) {
			System.out.println("A sua categoria é a infantil." + idade1);
			idade1 = leia.nextInt();
		}
		
		else if (idade2 >= 15 && idade2 <= 17) {
			System.out.println("A sua categoria é a Juvenil." + idade2);
			idade2 = leia.nextInt();
		}
	
		else if (idade3 >= 18 && idade3 <= 25){
			System.out.println("A sua categoria é a Adulta." + idade3);
			idade3 = leia.nextInt();
		}
		
		else {
			System.out.println("Dado Inválido.");
		}
		
		leia.close();
	}

}
